
/* Global Reset */
html, body {
  margin: 10px;
  padding: 0;
  box-sizing: border-box;
  background-color: #2d2d2d;
  color: #ffffff;
  font-family: "Courgette", cursive;
}

/* Image on the left side with border-radius */
body > img {
  border-radius: 100%; /* Rounded corners for the image */
  border: 3px solid black; /* Thinner border around the image */
  width: 300px;
  position: absolute;
  top: 90px;
  left: 50px;
  display: inline-block; /* Ensures the image stays inline with text */
}

/* h1 styling */
h1 {
  color: #4f748a; /* Darker color for the header */
  font-family: "Courgette", cursive;
  font-size: 6em;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Section margin */
section {
  margin-top: 10px;
  margin-bottom: 10px;
}

/* Main content styling */
main {
  text-align: center;
  border: solid black 5px;
  padding: 1em;
  background: rgb(48, 50, 61);
  margin-top: 10px;
  margin-bottom: 10px;
}

/* Table styling */
table {
  text-align: center;
  margin: 10px auto;
  box-sizing: border-box;
}

/* Labels in the contact section */
main > label {
  font-size: 3em;
  text-decoration: underline;
  color: rgb(217, 137, 137);
}

/* Form inside main */
main > form {
  font-size: 24px;
  border-collapse: collapse;
}

/* Submit button styling */
main > button {
  text-shadow: .5px .5px .5px rgb(66, 84, 202);
}

/* Paragraph styling */
p {
  max-width: 50%;
  font-size: 24px;
  margin-top: 10px;
  margin-bottom: 10px;
}

/* Styling for h2 */
h2 {
  font-weight: bold;
  font-size: 36px;
  padding-bottom: 1em;
  border-left: solid black 7px;
  margin-top: 10px;
  margin-bottom: 10px;
}

/* Links without underlines */
a {
  text-decoration: none;
}

/* Education section */
.Education {
  font-size: 24px;
  margin-top: 10px;
  margin-bottom: 10px;
}

/* ContactInfo styling */
.ContactInfo {
  padding: 2em;
  position: relative;
  left: 75%;
}

/* Summary paragraph styling */
.Summary p {
  text-indent: 10px;
}

/* Unordered list font size */
ul {
  font-size: 24px;
}
